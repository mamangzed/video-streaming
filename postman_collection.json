{
	"info": {
		"_postman_id": "api-s3-collection",
		"name": "API S3 - Video & Image Upload",
		"description": "Collection for testing API S3 endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				}
			},
			"response": []
		},
		{
			"name": "Upload File",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": []
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/api/v1/upload",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"upload"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Video Stream Info",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/media/{{media_id}}/stream",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"media",
						"{{media_id}}",
						"stream"
					]
				}
			},
			"response": []
		},
		{
			"name": "Stream Video",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/media/{{media_id}}/stream/{{quality}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"media",
						"{{media_id}}",
						"stream",
						"{{quality}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Thumbnail",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/media/{{media_id}}/thumbnail",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"media",
						"{{media_id}}",
						"thumbnail"
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete Media",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/media/{{media_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"media",
						"{{media_id}}"
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "media_id",
			"value": "your-media-id-here",
			"type": "string"
		},
		{
			"key": "quality",
			"value": "720p",
			"type": "string"
		}
	]
} 